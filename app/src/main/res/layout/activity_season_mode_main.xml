<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arturo.fantasyfootball.SeasonMode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team Name"
        android:id="@+id/tvTeamName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Record(W-L-D)"
        android:id="@+id/tvRecord"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="week # "
        android:id="@+id/tvWeek"
        android:layout_below="@+id/tvRecord"
        android:layout_alignLeft="@+id/tvRecord"
        android:layout_alignStart="@+id/tvRecord" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(vs/@) opponent"
        android:id="@+id/tvOpponent"
        android:layout_below="@+id/tvWeek"
        android:layout_alignLeft="@+id/tvWeek"
        android:layout_alignStart="@+id/tvWeek" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Play Now"
        android:id="@+id/btnPlayNow"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvOpponent"
        android:layout_centerHorizontal="true"
        android:onClick="onClickPlayNow" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Roster"
        android:id="@+id/btnRosterView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnPlayNow"
        android:layout_alignLeft="@+id/btnPlayNow"
        android:layout_alignStart="@+id/btnPlayNow"
        android:onClick="onClickRosterView" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:id="@+id/btnSeasonView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnRosterView"
        android:layout_alignLeft="@+id/btnRosterView"
        android:layout_alignStart="@+id/btnRosterView" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:id="@+id/btnSeasonScheduleView"
        android:layout_below="@+id/btnSeasonView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/btnLeagueSettingsView"
        android:layout_below="@+id/btnSeasonScheduleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Team Rating:"
        android:id="@+id/tvTeamRating"
        android:layout_below="@+id/tvTeamName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
